\begin_layout Standard
Для двух векторов
\series bold
 
\begin_inset Formula $a,b\in\mathbb{R}^{n}$
\end_inset

 
\end_layout

\begin_layout Standard
\begin_inset Formula $a=a^{i}e_{i}$
\end_inset


\end_layout

