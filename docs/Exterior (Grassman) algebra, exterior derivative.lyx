\begin_layout Standard
\begin_inset Formula $a=a_{1}e_{1}+a_{2}e_{2}+a_{3}e_{3}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $b=b_{1}e_{1}+b_{2}e_{2}+b_{3}e_{3}$
\end_inset


\end_layout

\begin_layout Standard
внешенее произведение определяется как
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
a\wedge b & =\left(a_{1}e_{1}+a_{2}e_{2}+a_{3}e_{3}\right)\wedge\left(b_{1}e_{1}+b_{2}e_{2}+b_{3}e_{3}\right)\\
 & =\underbrace{a_{1}e_{1}\wedge b_{1}e_{1}}_{=0}+a_{2}b_{1}e_{2}\wedge e_{1}+a_{3}b_{1}e_{3}\wedge e_{1}+a_{1}b_{2}e_{1}\wedge e_{2}+\\
 & +\underbrace{a_{2}e_{2}\wedge b_{2}e_{2}}_{=0}+a_{3}b_{2}e_{3}\wedge e_{2}+a_{1}b_{3}e_{1}\wedge e_{3}+a_{2}b_{3}e_{2}\wedge e_{3}+\underbrace{a_{3}b_{3}e_{3}\wedge e_{3}}_{=0}\\
 & =\left(a_{1}b_{2}-a_{2}b_{1}\right)e_{1}\wedge e_{2}+\left(a_{2}b_{3}-a_{3}b_{2}\right)e_{2}\wedge e_{3}+\left(a_{3}b_{1}-a_{1}b_{3}\right)e_{3}\wedge e_{1}
\end{align*}

\end_inset

Тогда
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
a\wedge b=\left(a_{1}b_{2}-a_{2}b_{1}\right)e_{1}\wedge e_{2}+\left(a_{3}b_{1}-a_{1}b_{3}\right)e_{3}\wedge e_{1}+\left(a_{2}b_{3}-a_{3}b_{2}\right)e_{2}\wedge e_{3}
\]

\end_inset

где 
\begin_inset Formula $\left(e_{1}\wedge e_{2},e_{3}\wedge e_{1},e_{2}\wedge e_{3}\right)$
\end_inset

 – базис нового пространства 
\begin_inset Formula $\Lambda^{2}\left(\mathbb{R}^{3}\right)$
\end_inset


\end_layout

